header
  div.burger__menu#burgerMenu
    ul.burger-lists
      if loggedIn
        li
          a(href="/videos/upload") Uploads
        li 
          a(href="/users/edit") Edit Profile
        li 
          a(href="/users/logout") Log Out
        li.burger-profile 
          a(href=`/users/${loggedInUser._id}`)
            if loggedInUser.avatarUrl === null
              span 🤪  #{loggedInUser.name}'s Profile  
            else 
              if isHeroku
                img(src=loggedInUser.avatarUrl).burger__avatar
              else
                if loggedInUser.avatarUrl.includes("github") || loggedInUser.avatarUrl.includes("kakao")
                  img(src=loggedInUser.avatarUrl).burger__avatar
                else
                  img(src="/" + loggedInUser.avatarUrl).burger__avatar 
              span #{loggedInUser.name}'s Profile  
      else  
        li 
          a(href="/login") Log In
        li 
          a(href="/join").header__btn Join
