extends main/layout

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(name="title", placeholder="title", required, type="text", minLength=3, maxLength=80 )
    textarea(name="description", placeholder="description", required, type="text", maxLength=200 )
    input(name="hashtags", placeholder="Hashtags, separated by comma", required, type="text")
    input(type="submit", value="Upload Video")